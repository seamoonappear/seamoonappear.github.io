source "https://rubygems.org"

# Jekyll 核心
gem "jekyll", "~> 4.3"

# 主题：Chirpy
gem "jekyll-theme-chirpy", "~> 7.4"

# 常用插件
gem "jekyll-paginate"
gem "jekyll-seo-tag"
gem "jekyll-feed"
gem "jekyll-sitemap"
gem "jekyll-archives"

# GitHub Pages 兼容支持
group :jekyll_plugins do
  gem "webrick"
end

# Windows 用户兼容
gem "wdm", "~> 0.1.1", :platforms => [:mswin, :mingw, :x64_mingw]
