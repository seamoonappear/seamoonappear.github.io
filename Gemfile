gem "jekyll-theme-chirpy", "~> 7.0"  # 请确认并使用主题的确切版本号

# 以下是在 _config.yml 的 'plugins' 列表中提到的插件，需要一并声明
gem "jekyll-sitemap"
gem "jekyll-seo-tag"
gem "jekyll-feed"

# 如果您计划使用 Cusdis 评论系统，也需要添加其 gem（如果存在）
# gem "jekyll-cusdis"

